{
    "version": "3.0.0",
    "name": "robuust/craft-laposta",
    "description": "Laposta forms for Craft 5",
    "type": "craft-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Bob Olde Hampsink",
            "email": "bob@robuust.digital"
        }
    ],
    "extra": {
        "handle": "laposta",
        "name": "Laposta",
        "developer": "Robuust",
        "developerUrl": "https://robuust.digital",
        "hasCpSettings": false,
        "hasCpSection": false
    },
    "require": {
        "php": "^8.0",
        "craftcms/cms": "^5.0",
        "laposta/laposta-api-php": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "robuust\\laposta\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
